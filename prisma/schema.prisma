generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  name      String
  email     String
  password  String
  nickname  String
  isAdmin   Boolean   @default(false)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now()) @updatedAt
  expenses  Expense[]
  revenues  Revenue[]
  tithers   Tithers[]

  @@map("user")
}

model Expense {
  id          String   @id @default(uuid())
  description String
  value       Float
  dueDate     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt
  User        User?    @relation(fields: [userId], references: [id])
  userId      String?

  @@map("expense")
}

model Revenue {
  id          String    @id @default(uuid())
  description String
  value       Float
  dueDate     String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @default(now()) @updatedAt
  User        User?     @relation(fields: [userId], references: [id])
  userId      String?
  tithers     Tithers[]

  @@map("revenue")
}

model Tithers {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  User      User?    @relation(fields: [userId], references: [id])
  userId    String?
  Revenue   Revenue? @relation(fields: [revenueId], references: [id])
  revenueId String?

  @@map("tithers")
}
